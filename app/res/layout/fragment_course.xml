<!--            android:layout_height="40dp"-->
<!--            android:layout_gravity="top"-->
<!--            android:background="@color/pink"-->
<!--            android:textColor="@color/red" />-->
    </androidx.viewpager.widget.ViewPager>

</LinearLayout>
