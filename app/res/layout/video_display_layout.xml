<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="350dp">
<!--    android:background="@drawable/pfsp_shape"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="253dp">
        <!--播放器-->

        <ImageView
            android:id="@+id/video_fm"
            android:layout_width="match_parent"
            android:layout_height="258dp" />

        <ImageView
            android:id="@+id/video_splay"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/pfsp_fm"
            android:layout_alignBottom="@id/pfsp_fm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="84dp"
            android:src="@drawable/dt_play" />

        <TextView
            android:id="@+id/video_share"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="355dp"
            android:layout_marginLeft="355dp"
            android:layout_marginBottom="186dp"
            android:background="@android:drawable/ic_menu_share" />

        <ImageView
            android:id="@+id/video_magnify"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/fd"
            android:tag="全屏放大" />

        <SeekBar
            android:id="@+id/radio_details_seek_bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="5dp"
            android:focusable="true"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:padding="10dp"
            android:progressDrawable="@drawable/shape_seekbar_bg"
            android:thumb="@drawable/seekbar_dot_bg" />
        <TextView
            android:id="@+id/video_title"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pfsp_fm"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:text="民法--悬赏广告支付报酬规则"
            android:textColor="#000000"
            android:textSize="15sp" />

        <com.volokh.danylo.video_player_manager.ui.VideoPlayerView
            android:id="@+id/item_video_player"
            android:layout_width="match_parent"
            android:layout_height="258dp" />
    </RelativeLayout>

</RelativeLayout>