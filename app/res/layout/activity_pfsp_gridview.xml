<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="350dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/pfsp_shape">
        <!--播放器-->

        <ImageView
            android:id="@+id/pfsp_fm"
            android:layout_width="match_parent"
            android:layout_height="258dp" />

        <ImageView
            android:id="@+id/video_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/pfsp_fm"
            android:layout_alignBottom="@id/pfsp_fm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="84dp"
            android:src="@drawable/dt_play" />

        <ImageView
            android:id="@+id/imageView44"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:src="@android:drawable/ic_menu_share" />

        <ImageView
            android:id="@+id/imageView45"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="10dp"
            android:src="@android:drawable/star_big_off" />

        <TextView
            android:id="@+id/pfsp_title"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pfsp_fm"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:text="民法--悬赏广告支付报酬规则"
            android:textColor="#000000"
            android:textSize="15sp" />

        <com.volokh.danylo.video_player_manager.ui.VideoPlayerView
            android:id="@+id/item_video_vpv_player"
            android:layout_width="match_parent"
            android:layout_height="258dp" />

        <TextView
            android:id="@+id/fx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/imageView44"
            android:layout_toRightOf="@+id/imageView44"
            android:tag="分享"
            android:text="分享"
            android:textColor="#000000" />

        <SeekBar
            android:id="@+id/radio_details_seek_bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_video_vpv_player"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:focusable="true"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:padding="10dp"
            android:progressDrawable="@drawable/shape_seekbar_bg"
            android:thumb="@drawable/seekbar_dot_bg" />

        <ImageView
            android:tag="全屏放大"
            android:id="@+id/fd"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/item_video_vpv_player"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/fd" />
    </RelativeLayout>

</RelativeLayout>