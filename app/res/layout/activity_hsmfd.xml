<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="@color/pink"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:alpha="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/page1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_hsmfd_page1"
            android:gravity="center"
            android:text="普法视频"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/page2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_hsmfd_page2"
            android:gravity="center"
            android:text="普法漫画"
            android:textColor="#F80202" />
    </LinearLayout>

    <Button
        android:id="@+id/mainfragment_wode2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mainfragment_wode"
        android:onClick="toggleMenu"
        android:tag="我的"
        android:text="" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/activity_hsmfd" />

    <SearchView
        android:id="@+id/mainfragment_search"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:iconifiedByDefault="false"
        android:inputType="textFilter"
        android:queryHint="搜索法条，律师"
        android:theme="@style/Search" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/hsmfd_viewpager"
        android:layout_width="match_parent"
        android:layout_height="595dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="136dp">

    </androidx.viewpager.widget.ViewPager>



</RelativeLayout>